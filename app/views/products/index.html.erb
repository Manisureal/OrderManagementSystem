<h1>All Products</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div>
        <% @products.each do |product| %>
          <p>Name: <%= product.title %></p>
          <p>Desc: <%= product.description %></p>
          <p>Unit Price: <%= product.price %></p>
          <p>Pack Size: <%= product.pack_size %></p>
          <p>Unique Product Code: <%= product.product_code %></p>
          <p><%= link_to 'Add to Order', add_to_order_product_path(product) %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
